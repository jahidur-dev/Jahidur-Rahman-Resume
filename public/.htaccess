
# ----------------------------------------------------------------------
# | Apache Configuration for Namecheap / cPanel Hosting                |
# ----------------------------------------------------------------------

# 1. Security Options
Options -Indexes

<IfModule mod_headers.c>
  # Block site from being framed (Clickjacking protection)
  Header set X-Frame-Options "SAMEORIGIN"
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  # XSS Protection
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# 2. Rewrite Rules (SPA Support & HTTPS)
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Base directory
  RewriteBase /
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # Don't rewrite files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Rewrite everything else to index.html (SPA Routing)
  RewriteRule ^ index.html [L]
</IfModule>

# 3. Gzip Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# 4. Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images: 1 month
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  
  # CSS/JS: 1 year (assuming you use cache-busting filenames in build)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  
  # Data Files: 5 minutes (for your data.json to update quickly)
  ExpiresByType application/json "access plus 5 minutes"
  
  # HTML: 0 seconds (always check for updates)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>
